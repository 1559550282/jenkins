pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        echo 'begin build'
        build 'jenkins'
        echo 'end build'
      }
    }

    stage('deploy') {
      steps {
        input 'Need approve'
        echo 'Deploy application'
        sh '''aws s3 cp s3://$S3BUCKET/$S3PREFIX/packaged.yaml .
/usr/local/bin/sam deploy --template-file packaged.yaml --stack-name $SAMSTACKNAME --capabilities CAPABILITY_IAM --region cn-northwest-1
'''
      }
    }

  }
  environment {
    bucketName = 'sharon199'
    prefix = 'sharonbuild'
    stakename = 'sam_lambda'
  }
}